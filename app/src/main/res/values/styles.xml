<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00bbd3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#f8e71c</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!--<item name="colorControlNormal">#737373</item>-->

        <!--drawer-->
        <item name="drawerArrowStyle">@style/NavDrawerTheme</item>
    </style>

    <!--action bar-->
    <style name="toolbar_theme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="NavDrawerTheme" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    
    <style name="AccentBlue" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">#00bbd3</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>